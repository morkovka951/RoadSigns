<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.m_book.roadsigns.TestActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/llFirstButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_test_top_left"
            android:text="Button"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_test_top_right"
            android:text="Button"
            android:textColor="#000000"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSecondButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/llFirstButton"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_test_down_left"
            android:text="Button"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_test_down_right"
            android:text="Button"
            android:textColor="#000000"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/llSecondButton"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonEndTest"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:text="@string/endtest"
            android:textAllCaps="false"
            android:textSize="10dp"/>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
